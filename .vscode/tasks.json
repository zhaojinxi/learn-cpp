{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++-10",
            "args": [
                "${file}",
                "-std=c++20",
                "-g",
                "-pedantic-errors",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wsign-conversion",
                "-Werror",
                "-o",
                "output/${fileBasenameNoExtension}.o"
            ],
            "problemMatcher":"$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}